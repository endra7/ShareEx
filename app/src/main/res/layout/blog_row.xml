<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/post_outline"
        android:padding="0.5dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_image"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_image"
            android:adjustViewBounds="true"
            />
        <com.endra.shareex.MyTextViewForTitle
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_title"
            android:textSize="21dp"
            android:textStyle="bold"
            android:text="Post Title Here"
            android:layout_marginLeft="2dp"
            android:textColor="#000"
            android:layout_marginBottom="1dp"
            />

        <com.endra.shareex.MyTextViewForDesc
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_desc"
            android:layout_marginLeft="2dp"
            android:text="Post Description here"
            android:textSize="22dp"
            />
           <!-- android:paddingLeft="40dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:layout_marginBottom="5dp"-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="1dp"
            android:background="@color/colorGrey"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>